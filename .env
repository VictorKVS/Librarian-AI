# корень проекта/.env

## ─────────────────────────────────────────────────────────────────────────────
# 📄 Файл окружения: .env (в корне проекта)
# ─────────────────────────────────────────────────────────────────────────────

# 📦 PostgreSQL (основная БД)
DB_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=librarian_db
DB_USER=librarian
DB_PASSWORD=secretpass
DB_REPLICA_HOST=

# ⚙️ Пул соединений PostgreSQL
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_TIMEOUT=30
DB_ECHO=false

# ⚡ Redis + Celery (асинхронные задачи)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_LOG_PATH=/var/log/celery.log
FLOWER_URL=http://localhost:5555

# 🧠 Qdrant (векторное хранилище)
QDRANT_HOST=qdrant

# 🧾 Общая конфигурация
LOG_LEVEL=INFO
VERSION=2.0.0

# 📁 Работа с файлами
TEMP_DIR=/tmp
MAX_FILE_SIZE=10000000
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".txt"]

# 🔐 OpenRouter (бесплатные модели)
OPENROUTER_KEY=your_openrouter_api_key

# 🧠 GigaChat (Сбер)
GIGACHAT_API_KEY=your_gigachat_token
GIGACHAT_API_OAUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1/chat/completions

# ☁️ YandexGPT (облако Яндекса)
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_yandex_folder_id

# 🧠 Mistral (локальная модель)
MISTRAL_MODEL_PATH=mistralai/Mistral-7B-Instruct-v0.2

# 🆓 AI-провайдер (deepseek, gigachat, ollama, huggingface, openrouter)
AI_PROVIDER=ollama

# -----------------------------------------------------------------------------
# Если переключитесь на другой провайдер — просто правьте AI_PROVIDER 
# и раскомментируйте соответствующие ключи ниже
# -----------------------------------------------------------------------------

# Для DeepSeek:
# DEEPSEEK_API_KEY=your_deepseek_api_key

# Для HuggingFace:
# HF_TOKEN=your_hf_token

# Для OpenRouter:
# OPENROUTER_API_KEY=your_openrouter_api_key
